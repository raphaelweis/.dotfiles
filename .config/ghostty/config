# Appearance
background-opacity = 1
theme = Gruvbox Dark Hard

font-family = JetBrainsMonoNL Nerd Font
font-feature = -calt
font-size = 10

window-padding-x = 5
window-padding-y = 5

# Behavior
confirm-close-surface = true
shell-integration-features = no-cursor

# Cursor
cursor-style = block
cursor-style-blink = false
cursor-invert-fg-bg = true
adjust-cursor-thickness = 1

# GTK integration (Linux)
gtk-titlebar-hide-when-maximized = false
gtk-single-instance = true

# Keybindings
keybind = ctrl+enter=unbind
keybind = performable:alt+c=copy_to_clipboard
keybind = performable:alt+v=paste_from_clipboard
keybind = alt+v=new_split:right
keybind = alt+s=new_split:down
keybind = alt+h=goto_split:left
keybind = alt+l=goto_split:right
keybind = alt+j=goto_split:down
keybind = alt+k=goto_split:up

